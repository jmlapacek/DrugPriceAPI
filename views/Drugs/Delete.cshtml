@model Drug

<h1>Confirm Delete</h1>
<div class="delete-container">
    <p>Are you sure you want to delete this drug?</p>
    <p><strong>Drug ID:</strong> @Model.DrugID</p>
    <p><strong>Drug Name:</strong> @Model.DrugName</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Price:</strong> $@Model.Price</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="DrugID" />
    <button type="submit" class="delete-button">Confirm Delete</button>
    <a asp-action="Index" class="back-button">Cancel</a>
</form>

<style>
    h1 {
        color: #004080;
        margin-bottom: 15px;
    }

    .delete-container {
        background-color: #f9f9f9;
        padding: 15px;
        border: 1px solid #ddd;
        margin-bottom: 20px;
    }

    .delete-button {
        background-color: #e74c3c;
        color: white;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        border-radius: 4px;
    }

    .delete-button:hover {
        background-color: #c0392b;
    }

    .back-button {
        background-color: #008cba;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 4px;
        margin-left: 10px;
    }

    .back-button:hover {
        background-color: #005f5f;
    }
</style>
