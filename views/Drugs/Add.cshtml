@model PharmaceuticalBillingProject.Models.Drug
<h1>Create Drug</h1>
<form asp-action="Create" method="post">
    <div>
        <label>Drug Name</label>
        <input asp-for="DrugName" />
    </div>
    <div>
        <label>Dose</label>
        <input asp-for="Dose" />
    </div>
    <div>
        <label>Unit Cost</label>
        <input asp-for="UnitCost" type="number" step="0.01" />
    </div>
    <button type="submit">Save</button>
</form>
<a asp-action="Index">Back to List</a>
