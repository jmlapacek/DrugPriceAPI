@{
    ViewData["Title"] = "Medications - Jahemlit Enterprises";
}

<h1>Medications</h1>

<section>
    <h2>Add a New Medication</h2>
    <form asp-action="Add" method="post">
        <input type="text" name="DrugName" placeholder="Drug Name" required />
        <input type="text" name="Description" placeholder="Description" required />
        <input type="number" step="0.01" name="Price" placeholder="Price" required />
        <button type="submit">Add Medication</button>
    </form>
</section>

<section>
    <h2>All Medications</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var drug in Model)
            {
                <tr>
                    <td>@drug.DrugName</td>
                    <td>@drug.Description</td>
                    <td>$@drug.Price</td>
                    <td>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@drug.DrugID" />
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
